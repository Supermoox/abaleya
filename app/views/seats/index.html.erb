<div class="row wrapper">  
  <div class="panel panel-default">
    <div class="row">
        <div class="panel-body">
          <div class="row">      
            <div class="col-md-3">
              <div class="table-responsive">
                <h4 >
                   <span class="location">
                      <svg viewBox="0 0 12 12">
                        <path d="M6 5.7c.4 0 .7-.1.9-.4.3-.3.4-.6.4-.9 0-.4-.1-.7-.4-.9-.2-.3-.5-.4-.9-.4s-.7.1-.9.4c-.3.2-.4.5-.4.9s.1.7.4.9c.2.3.5.4.9.4zm0-5c1 0 1.9.4 2.6 1.1.7.7 1.1 1.6 1.1 2.6 0 .5-.1 1.1-.4 1.8s-.5 1.3-.9 1.9c-.4.5-.7 1.1-1.1 1.6-.4.5-.7.9-.9 1.2l-.4.4c-.1-.1-.2-.3-.4-.5s-.5-.6-.9-1.2c-.4-.5-.8-1-1.1-1.6s-.7-1.1-.9-1.8c-.3-.7-.4-1.3-.4-1.8 0-1 .4-1.9 1.1-2.6S5 .7 6 .7z">
                       </path>
                      </svg> 
                    </span>
                    <span> <%=  @seat.journey.from.name  %>  </span>
                  
                </h4>  
                   <p>
                <%= @seat.journey.departure %>
              </p>
              </div>  
            </div>
            <div class="col-md-3">
              <div class="row">
                <div class="duration"><%=  @seat.journey.arrival - @seat.journey.departure  %> </div>
              </div>
              <div class="row">
                <div class="col-md-2 ">
                  <div class="circle-left">
                  </div>
                </div>
                <div class="col-md-6 line"></div>
                <div class="col-md-2">
                   <div class="circle-right">
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-3">
                  <h4>
                    <span class="location">
                      <svg viewBox="0 0 12 12">
                        <path d="M6 5.7c.4 0 .7-.1.9-.4.3-.3.4-.6.4-.9 0-.4-.1-.7-.4-.9-.2-.3-.5-.4-.9-.4s-.7.1-.9.4c-.3.2-.4.5-.4.9s.1.7.4.9c.2.3.5.4.9.4zm0-5c1 0 1.9.4 2.6 1.1.7.7 1.1 1.6 1.1 2.6 0 .5-.1 1.1-.4 1.8s-.5 1.3-.9 1.9c-.4.5-.7 1.1-1.1 1.6-.4.5-.7.9-.9 1.2l-.4.4c-.1-.1-.2-.3-.4-.5s-.5-.6-.9-1.2c-.4-.5-.8-1-1.1-1.6s-.7-1.1-.9-1.8c-.3-.7-.4-1.3-.4-1.8 0-1 .4-1.9 1.1-2.6S5 .7 6 .7z">
                       </path>
                      </svg> 
                    </span>
                    <span><%= @seat.journey.to.name  %>  </span>   
                  </h4>
         
              <p>
                <%= @seat.journey.arrival %>
              </p>
            </div> 
           <div class="col-md-3 ">
              <h4>
                K<%= @seat.journey.price %>
              </h4>
            </div>   
          </div>
        </div>
    </div>
  </div>

  <div class="panel panel-default">
    <% unless @seat.journey.seats.blank? %>
      <div class="row">
        <div class="col-md-6">
          <div class="wheels"></div>
        </div>
        <div class="col-md-6">
          <div class="wheels"></div>
        </div>
      </div>     
     <div class="row bus">
        <% @seat.journey.seats.each do |seat| %>
          <% if (seat.seat_number == 6 || seat.seat_number == 17)  %>
            <% if seat.id == @seat.id %>
              <div class="col-md-1 blank">
              </div>
              <div class="col-md-1">
                <span> <%= link_to seat.seat_number,"",  class: "btn btn-default btn-selected" %></span>
              </div>
             <% else %>
              <div class="col-md-1 blank">
              </div>
              <div class="col-md-1">
                <span> <%= link_to seat.seat_number,"",  class: "btn btn-default btn-danger" %></span>
              </div>
            <% end %>
          <% else%>
            <% if (seat.seat_number == 23)%>
                <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>
                  <div class="col-md-1 blank">
                </div>         
            <% end %>
            <% unless seat.occupied %>
              <% if seat.id == @seat.id %>
              <div class="col-md-1 ">               
                <span> <%= link_to seat.seat_number, '',  class: "btn btn-default btn-selected"%></span>
              </div>
              
              <% else %>
              <div class="col-md-1 ">               
                <span> <%= link_to seat.seat_number, seat,  class: "btn btn-default btn-danger"%></span>
              </div>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
     </div>
    <% end %>
      <div class="row">
        <div class="col-md-6">
          <div class="wheels-bottom"></div>
        </div>
        <div class="col-md-6">
          <div class="wheels-bottom"></div>
        </div>
      </div> 
  </div>
</div>







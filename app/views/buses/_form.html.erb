<%= form_for @bus do |f| %>

  <% if bus.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bus.errors.count, "error") %> prohibited this bus from being saved:</h2>

      <ul>
      <% bus.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :carrier_name, 'Name of the Bus carrier' %>
    <%= f.text_field :carrier_name %>
  </div>
  <div class="field">
    <%= f.label :registration, 'Bus Registration' %>
    <%= f.text_field :registration %>
  </div>
  <div class="field">
    <%= f.label :make, 'Make OF The Bus' %>
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :bus_description %>
  </div>

  <div class="form-group sits">
    <div class="actions">
     <%= link_to_add_association 'Add A Sit', f, :sits, class: 'btn btn-primary', data: { association_insertion_node: '.sits', association_insertion_method: :append } %>
    </div>
    <div class="sit">
      <%= f.fields_for :sits do |builder| %>
        <%= render 'sit_fields', f: builder %>
      <% end %>
    </div>
  </div>
  <p> <%= f.submit %> </p>
<% end %>


